<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.v3_571g.dr_breatheapp.Infor">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headPhotoButton"
        android:background="@drawable/abc_dialog_material_background_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name:"
        android:gravity="center_vertical"
        android:id="@+id/nameButton"
        android:layout_marginTop="36dp"
        android:minWidth="360dp"
        android:layout_below="@+id/headPhotoButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight/Height:"
        android:gravity="center_vertical"
        android:id="@+id/bwAndBhButton"
        android:layout_marginTop="10dp"
        android:minWidth="360dp"
        android:layout_below="@+id/nameButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthday:"
        android:gravity="center_vertical"
        android:id="@+id/birthdayButton"
        android:layout_marginTop="10dp"
        android:minWidth="360dp"
        android:layout_below="@+id/bwAndBhButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gender:"
        android:gravity="center_vertical"
        android:id="@+id/genderButton"
        android:layout_marginTop="10dp"
        android:minWidth="360dp"
        android:layout_below="@+id/birthdayButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email:"
        android:gravity="center_vertical"
        android:id="@+id/emailButton"
        android:layout_marginTop="10dp"
        android:minWidth="360dp"
        android:layout_below="@+id/genderButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
